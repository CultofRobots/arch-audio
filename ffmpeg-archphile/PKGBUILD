# Maintainer: Tux <info@archphile.org>
# Website: http://archphile.org
# Based on ffmpeg-headless from AUR made by the following people
# $Id: PKGBUILD 228056 2014-12-26 11:57:24Z bpiotrowski $
# Maintainer:  Ionut Biru <ibiru@archlinux.org>
# Maintainer:  Bart≈Çomiej Piotrowski <bpiotrowski@archlinux.org>
# Contributor: Tom Newsom <Jeepster@gmx.co.uk>
# Contributor: Paul Mattal <paul@archlinux.org>


_pkgname=ffmpeg
pkgname=ffmpeg-archphile
pkgver=4.0.2
pkgrel=2
epoch=1
pkgdesc='The FFmpeg media toolkit optimized for server (headless) systems'
arch=('armv7h' 'aarch64')
url='http://ffmpeg.org/'
license=('GPL')
provides=('libavcodec.so' 'libavformat.so'
          'libavresample.so' 'libavutil.so' 'libpostproc.so' 'libswresample.so'
          "ffmpeg=${pkgver}")
conflicts=("ffmpeg")
replaces=("ffmpeg")
depends=(
      'bzip2' 'gnutls' 'lame'
      'libmodplug' 'libtheora' 'libvorbis'
      'opencore-amr' 'rtmpdump'
      'zlib' 'libfdk-aac' 'libvorbis.so'
)
makedepends=('yasm')
source=("https://ffmpeg.org/releases/${_pkgname}-${pkgver}.tar.xz")

sha256sums=('a95c0cc9eb990e94031d2183f2e6e444cc61c99f6f182d1575c433d62afb2f97')

prepare() {
  cd ${_pkgname}-${pkgver}

}


build() {
  
  cd ${_pkgname}-${pkgver}

  #[[ $CARCH == "armv7h" || $CARCH == "aarch64" ]] && CONFIG='--host-cflags="-fPIC"'

  ./configure \
    --prefix='/usr' \
    --disable-debug \
    --disable-static \
    --disable-stripping \
    --disable-avdevice \
    --disable-avfilter \
    --disable-swscale \
    --disable-ffplay \
    --disable-network \
    --disable-bsfs \
    --disable-filters \
    --disable-parsers \
    --disable-indevs \
    --disable-outdevs \
    --disable-encoders \
    --enable-decoders \
    --enable-avresample \
    --enable-gnutls \
    --enable-gpl \
    --enable-libmodplug \
    --enable-libmp3lame \
    --enable-libopencore_amrnb \
    --enable-libopencore_amrwb \
    --enable-libopus \
    --enable-librtmp \
    --enable-libvorbis \
    --enable-runtime-cpudetect \
    --enable-shared \
    --enable-swresample \
    --enable-version3 \
    --enable-libfdk_aac \
    --enable-nonfree

  make
}

package() {
  cd ${_pkgname}-${pkgver}
  make DESTDIR="${pkgdir}" install install-man
}
