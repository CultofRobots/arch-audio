pkgname=libnpupnp
pkgver=4.1.5
pkgrel=1
pkgdesc="an UPnP library derived from the venerable pupnp"
url="http://www.lesbonscomptes.com/upplay/downloads.html"
arch=('x86_64' 'armv7h' 'aarch64')
license=(LGPLv2.1)
depends=(expat libmicrohttpd)
source=("http://www.lesbonscomptes.com/upmpdcli/downloads/${pkgname}-${pkgver}.tar.gz")
sha256sums=('566f5895376a14aa87997de7ce3454595646613d1d0af34d05c31f6d9fe884a9')

prepare() {
  cd "${pkgname}-${pkgver}"
  ./autogen.sh
}

build(){
  cd "${pkgname}-${pkgver}"
  ./configure --prefix=/usr
  make
}

package(){
  cd "${pkgname}-${pkgver}"
  make DESTDIR="$pkgdir" install
  install -Dm644 COPYING "${pkgdir}/usr/share/licenses/${pkgname}/COPYING"
}
