pkgname=libnpupnp
pkgver=4.2.3
pkgrel=1
pkgdesc="an UPnP library derived from the venerable pupnp"
url="http://www.lesbonscomptes.com/upplay/downloads.html"
arch=('x86_64' 'armv7h' 'aarch64')
license=(LGPLv2.1)
depends=(expat libmicrohttpd)
source=("http://www.lesbonscomptes.com/upmpdcli/downloads/${pkgname}-${pkgver}.tar.gz")
sha256sums=('fdf053c47acbbae104ffd8743fcd662634cf2e4fe7e3a81c3a1a8c5934d10d0e')

prepare() {
  cd "${pkgname}-${pkgver}"
  ./autogen.sh
}

build(){
  cd "${pkgname}-${pkgver}"
  ./configure --prefix=/usr
  make
}

package(){
  cd "${pkgname}-${pkgver}"
  make DESTDIR="$pkgdir" install
  install -Dm644 COPYING "${pkgdir}/usr/share/licenses/${pkgname}/COPYING"
}
