# Maintainer: robot <cultofrobots [at] protonmail [dot] com>
# Website: https://github.com/CultofRobots
# Based on jcorporation's myMPD PKGBUILD
# Website: https://github.com/jcorporation/myMPD

pkgname=mympd
_pkgname=myMPD
pkgver=5.7.2
pkgrel=2
pkgdesc="myMPD is a standalone and mobile friendly web mpdclient."
arch=('x86_64' 'armv7h' 'aarch64')
url="http://github.org/jcorporation/myMPD"
license=('GPL')
depends=('libmpdclient' 'openssl')
makedepends=('cmake')
optdepends=('libmediainfo')
provides=()
conflicts=()
replaces=()
backup=('etc/webapps/mympd/mympd.conf')
install=mympd.install
source=("https://github.com/jcorporation/${_pkgname}/archive/v.${pkgver}.tar.gz"
        'mympd.install')
sha256sums=('2e78ed2f62e0bee867ca2d079a9acc11f94ba9e647e6688a2c7d08aade44caa2'
            'ef6e52558fd1a61bb51012e9a8ab4b9cabdf2e2c7e31e39189873375781621fc')

build() {
  cd "${srcdir}/${_pkgname}-v.${pkgver}" || exit 1
  install -d release
  cd release || exit 1
  cmake -DCMAKE_INSTALL_PREFIX:PATH=/usr -DCMAKE_BUILD_TYPE=RELEASE ..
  make
}

package() {
  cd "${srcdir}/${_pkgname}-v.${pkgver}/release"
  make DESTDIR="$pkgdir/" install
}
